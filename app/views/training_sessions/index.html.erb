<h1>Your Training Sessions</h1>
<%= link_to 'New Training Session', new_training_session_path, class: 'btn btn-primary' %>
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Activity</th>
      <th>Duration (minutes)</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @training_sessions.each do |training_session| %>
      <tr>
        <td><%= training_session.date %></td>
        <td><%= training_session.activity %></td>
        <td><%= training_session.duration %></td>
        <td><%= training_session.description %></td>
        <td><%= link_to 'Edit', edit_training_session_path(training_session), class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Delete', training_session_path(training_session), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>